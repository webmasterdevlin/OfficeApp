            <Label HorizontalOptions="Center" Text="Not yet registered?" TextColor="Gray" />
            <Label Text="Sign Up" TextColor="Gray" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BindingContext.ToSignupPageCommand, Source={x:Reference MyStack}}" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>-->
        <Label HorizontalOptions="Center" TextColor="DarkGray">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Not yet registered? " />
                    <Span Text="Sign Up" FontAttributes="Bold">
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToSignupPageCommand}" />
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>
</ContentPage>